<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#58FAF4">

        <ImageView
            android:id="@+id/event_image"
            android:contentDescription="@string/event_img_desc"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_height="120dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="120dp"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:id="@+id/event_title"
            android:gravity="center_horizontal"
            android:layout_alignTop="@+id/event_image"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/event_image"
            android:layout_toRightOf="@id/event_image"
            android:layout_width="match_parent"
            android:text="@string/hello_world"
            android:textSize="30sp"
            />

        <TextView
            android:id="@+id/event_date"
            android:gravity="center_horizontal"
            android:layout_alignLeft="@+id/event_title"
            android:layout_alignStart="@+id/event_title"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/date"
            android:textSize="20sp"
            />

        <TextView
            android:id="@+id/event_location"
            android:gravity="center_horizontal"
            android:layout_alignBottom="@+id/event_image"
            android:layout_alignLeft="@+id/event_date"
            android:layout_alignStart="@+id/event_date"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:text="@string/location"
            android:textSize="20sp"
            />
        </RelativeLayout>
</android.support.v7.widget.CardView>